            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"message\": \"Great service!\",\n  \"rating\": 5,\n  \"status\": \"ACTIVE\"\n}"
