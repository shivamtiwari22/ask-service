    },
    {
      "name": "Service Document Requirements",
      "item": [
        {
          "name": "Create Service Document Requirement",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"service_category\": \"{{serviceCategoryId}}\",\n  \"name\": \"Passport Copy\",\n  \"type\": \"DOCUMENT\",\n  \"is_required\": true,\n  \"status\": \"ACTIVE\"\n}"
            },
            "url": "{{baseUrl}}/api/admin/service-document-requirements",
            "description": "type: DOCUMENT | LICENSE"
          }
        },
        {
          "name": "Get All Service Document Requirements",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/admin/service-document-requirements"
